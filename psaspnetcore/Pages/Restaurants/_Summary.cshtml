@using Psapnetcore.Core;
@model Restaurant

    <div class="card m-2">
        <div class="card-header">
            <h3>@Model.Name</h3>
        </div>
        <div class="card-body">
            <p><b>Location: </b>@Model.Location</p>
            <p><b>Cuisine: </b>@Model.Cuisine</p>
        </div>
        <div class="card-footer">
            <a class="btn btn-lg"
               asp-page="./Detail" asp-route-restaurantId="@Model.Id">
                <i class="fas fa-search-plus"></i>
            </a>
            <a class="btn btn-lg"
               asp-page="./Edit" asp-route-restaurantId="@Model.Id">
                <i class="fas fa-edit"></i>
            </a>
            <a class="btn btn-lg"
               asp-page="./Delete" asp-route-restaurantId="@Model.Id">
                <i class="far fa-trash-alt"></i>
            </a>
        </div>
    </div>
