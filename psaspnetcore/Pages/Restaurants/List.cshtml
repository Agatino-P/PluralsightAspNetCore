@page
@model psaspnetcore.Pages.Restaurants.ListModel
@{
}

<h1>Restaurants</h1>
<body>
    <div>
        <form  method="get">
            <div class="form-group"> 
                <div class="input-group mb-0">
                    <input type="search" class="form-control" asp-for="SearchTerm"/>
                    <span class="input-group-append">
                        <button class="btn btn-outline-secondary">
                            <i class="fas fa-search"></i>    
                        </button>
                    </span>
                </div>

            </div>

        </form>
    </div>
    <div>
        <table class="table">
            @foreach (var restaurant in Model.Restaurants)
            {
                <tr>
                    <td>@restaurant.Name</td>
                    <td>@restaurant.Location</td>
                    <td>@restaurant.Cuisine</td>
                    <td>
                        <a class="btn btn-lg"
                           asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">
                            <i class="fas fa-search-plus"></i>
                        </a>
                        <a class="btn btn-lg"
                           asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a class="btn btn-lg"
                           asp-page="./Delete" asp-route-restaurantId="@restaurant.Id">
                            <i class="far fa-trash-alt"></i>
                        </a>

                    </td>
                </tr>
            }
        </table>
    </div>
    <a asp-page="./Edit" class="btn btn-primary">Add new</a>
    @section footer
    {
    <div>@Model.Message</div>
    }
</body>

